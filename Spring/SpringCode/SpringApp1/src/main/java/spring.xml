<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

<!-- bean definitions here -->
	<bean id="laptop" class="in.mindcraft.SpringApp1.Laptop">
		<property name="make" value="Asus"></property>
	</bean>

	<bean  id="address" class="in.mindcraft.SpringApp1.Address" autowire="byName">
		<property name="city" value="Kalwa"></property>
		<property name="state" value="Maharashtra"></property>
	</bean>
	
	<bean id="stud" class="in.mindcraft.SpringApp1.Student" autowire="byName">
		<property name="rollno" value="1"></property>
		<property name="name" value="Satvik"></property>
	</bean>

</beans>